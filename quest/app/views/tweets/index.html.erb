<p id="notice"><%= notice %></p>
<div class="container">
  <div style="text-align: center;">
    <h1>Post</h1>
    <h3 class="btn btn-primary" style="color: white; font-weight: 900; text-decoration: none;"><%= link_to 'New Post?', new_tweet_path %></h3>
  </div>
  <br>
  <div class="table-responsive">
    <table class="table table-responsive table-striped">
      <thead>
        <tr>
          <th>User</th>
          <th>Message</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= link_to tweet.user.username, show_user_path(id: tweet.user.id) %></td>
            <td><%= tweet.message.html_safe %></td>
            <td><%= link_to 'Show', tweet %></td>
            <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>



